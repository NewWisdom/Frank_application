<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:id="@+id/level1_endheader"
            android:src="@drawable/header"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1일째 완료!"
            android:textColor="#FFF59D"
            android:textSize="40dp"
            android:textStyle="bold"
            android:background="#79C4C4C4"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/level1_endheader"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 운동"
                android:textSize="26dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85 kcal"
                android:textSize="26dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="#ffffff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02:50"
                android:textSize="26dp"
                android:layout_marginHorizontal="15dp"
                android:textColor="#ffffff"/>


        </LinearLayout>

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="알림 : 오전 10:00"
        android:gravity="left|center_vertical"
        android:textSize="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="#F7FAFF"
        android:paddingLeft="15dp"
        android:drawableRight="@drawable/plus"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="체중"
        android:gravity="left|center_vertical"
        android:textSize="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="#F7FAFF"
        android:paddingLeft="15dp"
        android:drawableRight="@drawable/plus"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="BMI(kg/m)"
        android:gravity="left|center_vertical"
        android:textSize="20dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="5dp"
        android:background="#F7FAFF"
        android:paddingLeft="15dp"
        android:drawableRight="@drawable/plus"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_btn2"
        android:text="다시 시작하기"
        android:textColor="#FFFFFF"
        android:textSize="30dp"
        android:id="@+id/level1_1_restart"
        android:onClick="onClick"/>
</LinearLayout>