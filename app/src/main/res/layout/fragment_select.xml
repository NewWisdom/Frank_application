<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF060955">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/levelScrollView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="훈련 계획 선택"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="27dp"
                    android:textStyle="bold"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="230dp"
                        android:src="@drawable/level1gr"
                        android:scaleType="fitXY"
                        android:id="@+id/level1"
                        android:layout_marginVertical="15dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="플랭크 초급"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:layout_alignTop="@+id/level1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"/>

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:background="#8D93DA"
                        android:text="시작"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_alignBottom="@+id/level1"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/level1_btn"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="230dp"
                        android:src="@drawable/level2gr"
                        android:scaleType="fitXY"
                        android:id="@+id/level2"
                        android:layout_marginVertical="15dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="플랭크 중급"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:layout_alignTop="@+id/level2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"/>

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:background="#8D93DA"
                        android:text="시작"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_alignBottom="@+id/level2"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/level2_btn"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="230dp"
                        android:src="@drawable/level3gr"
                        android:scaleType="fitXY"
                        android:id="@+id/level3"
                        android:layout_marginVertical="15dp"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="플랭크 고급"
                        android:textStyle="bold"
                        android:textSize="24dp"
                        android:layout_alignTop="@+id/level3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"/>

                    <Button
                        android:layout_width="180dp"
                        android:layout_height="35dp"
                        android:background="#8D93DA"
                        android:text="시작"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_alignBottom="@+id/level3"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        android:id="@+id/level3_btn"/>
                </RelativeLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>